<Window x:Class="AFB.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AFB.Desktop"
        mc:Ignorable="d"
        Title="AFB" Height="450" Width="924">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="154"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="CanInputPart" Grid.Row="0" Grid.Column="0" Margin="0,0,0,2">
            <ScrollBar x:Name="SBZoomMain" Height="100" Canvas.Left="270" Canvas.Top="80" Width="20" Minimum="0.01" Maximum="100" Value="1" SmallChange="0.01" LargeChange="0.1" IsMouseCaptureWithinChanged="SBZoomChanged" Visibility="Hidden">
                <ScrollBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="270"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ScrollBar.RenderTransform>
            </ScrollBar>
            <TextBox x:Name="TBFunction" Text="y=x" Canvas.Left="113" Canvas.Top="9" Width="93"/>
            <TextBlock Height="17" Canvas.Left="10" Canvas.Top="10" Width="103" Text="Введите функцию:"/>
            <TextBlock Height="17" Canvas.Left="230" Canvas.Top="9" Width="175" Text="Введите начальное значение x:"/>
            <TextBox x:Name="TBXStart" Text="0" Canvas.Left="405" Canvas.Top="9" Width="40"/>
            <TextBlock Height="17" Canvas.Left="470" Canvas.Top="10" Width="168" Text="Введите конечное значение x:"/>
            <TextBox x:Name="TBXEnd" Text="1" Canvas.Left="638" Canvas.Top="9" Width="40"/>
            <TextBlock Height="17" Canvas.Left="706" Canvas.Top="9" Width="136" Text="Введите шаг значений x:"/>
            <TextBox x:Name="TBXStep" Text="1" Canvas.Left="847" Canvas.Top="9" Width="40"/>
            <Button x:Name="BTCount" Height="49" Width="77" Canvas.Left="10" Canvas.Top="32" Content="Посчитать"/>
            <TextBlock Height="17" Canvas.Left="10" Canvas.Top="86" Width="88" Text="Y начальное:"/>
            <TextBlock Height="17" Canvas.Left="10" Canvas.Top="108" Width="88" Text="Y конечное:"/>
            <TextBlock Height="17" Canvas.Left="10" Canvas.Top="130" Width="88" Text="Функция в ОПЗ:"/>
            <TextBlock x:Name="TBRPNFunction" Height="17" Canvas.Left="113" Canvas.Top="130" Width="136"/>
            <TextBlock x:Name="TBYEnd" Height="17" Canvas.Left="113" Canvas.Top="108" Width="136"/>
            <TextBlock x:Name="TBYStart" Height="17" Canvas.Left="113" Canvas.Top="86" Width="136"/>
            <TextBlock x:Name="TBError" Height="61" Canvas.Left="550" Canvas.Top="42" Width="320" Background="Red" Visibility="Hidden"/>
            <Button x:Name="BTClearError" Height="29" Width="320" Canvas.Left="550" Canvas.Top="113" Content="Удалить сообщение об ошибке" Background="Tomato" Visibility="Hidden"/>
            <ScrollBar x:Name="SBZoomX" Height="100" Canvas.Left="270" Canvas.Top="140" Width="20"  Minimum="0.01" Maximum="100" Value="1" SmallChange="0.01" LargeChange="0.1" IsMouseCaptureWithinChanged="SBZoomChanged" Visibility="Hidden">
                <ScrollBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="270"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ScrollBar.RenderTransform>
            </ScrollBar>
            <ScrollBar x:Name="SBZoomY" Height="100" Canvas.Left="270" Canvas.Top="90" Width="20"  Minimum="0.01" Maximum="100" Value="1" SmallChange="0.01" LargeChange="0.1" IsMouseCaptureWithinChanged="SBZoomChanged" Visibility="Hidden">
                <ScrollBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform Angle="90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ScrollBar.RenderTransform>
            </ScrollBar>
        </Canvas>
        <DockPanel Grid.Row="1" Grid.Column="0" Margin="10,0,10,10">
            <Border BorderBrush="Black" 
                    BorderThickness="1">
                <Canvas x:Name="CanGraphicFild" SizeChanged="GraphicFildSizeChanged">

                </Canvas>
            </Border>
        </DockPanel>
    </Grid>
</Window>
